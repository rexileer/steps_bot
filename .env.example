# CDEK OAuth credentials
CDEK_ACCOUNT=
CDEK_SECURE=

# Sender origin city code (numeric, required by CDEK)
CDEK_FROM_CITY_CODE=

# Tariff codes (defaults are common)
CDEK_TARIFF_PVZ=136
CDEK_TARIFF_COURIER=137

